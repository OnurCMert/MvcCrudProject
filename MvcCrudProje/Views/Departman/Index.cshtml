@using MvcCrudProje.Data.Entities
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departmanlar Listesi</h2>

<a class="btn btn-primary" href="/Departman/Ekle">Departman Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var departman in Model)
        {
            <tr>
                <td>@departman.ID</td>
                <td>@departman.Ad</td>


                <td><a class="btn btn-primary" href="/Departman/Guncelle/@departman.ID">Güncelle</a></td>
                <td><a class="btn btn-primary" href="/Departman/Sil/@departman.ID">Sil</a></td>

            </tr>
        }
    </tbody>


</table>


